                <form action="/postt" method="post" style="display: none;" id="fotp">

                    <!-- <div class="input-box">
                        <input type="email" id="Bemail" name="Bemail" placeholder="Enter Your Registered Email"
                            required>
                    </div> -->
                    <br>
                    <!-- <div class="input-box">
                        <input type="text" name="Bpass" placeholder="Enter Your password" minlength="8" maxlength="10" required>
                    </div>
