                    <div class="input-box">
                        <!-- <input type="text" name="Bpass" placeholder="Enter Your password" required> -->
                        <label for="imageb" id="i">blog image </label>
                        <input type="file" name="imageb" id="imageb" accept="image/jpg, image/jpeg, image/png" required>
                    </div>
                    <br>
                    <div class="input-box">
                        <input type="text" name="Btitle" placeholder="Title of your story" maxlength="20" required>
                    </div>
                    <br>
                    <div class="input-box">
                        <input type="date" name="Bdate" placeholder="date" hidden>
                    </div>
                    <br>
                    <div class="input-box">
                        <textarea name="Bstory" id="tarea" cols="80" rows="10" placeholder="write your story here"
                            maxlength="800" required></textarea>

                        <button id="btnb">Post</button>
                    </div>
                </form>
            </div>


        </div>

        </div>
    </section>

    <section>
        <div class="container" id="hori">
            <br><br>
            <div class="col-div-6">
                <% for (let i=0; i<blogdata.length; i++) { %>
                    <div class="box-1">
                        <img src="<%=blogdata[i].image%>" class="b-img">
                        <h3 class="heading1">
                            <%=blogdata[i].title%>
                        </h3>
                        <!-- <p class="text">
                            <%=blogdata[i].story%>.substring(1, 20) 
                        </p> -->
                        <span class="name">
                            <%=blogdata[i].Date%>
                        </span>
                        <form action="/readstory" method="post">
                            <input type="email" name="email" value="<%=blogdata[i].email%>" hidden>
                            <button class="bn53">Read</button>
                        </form>
                    </div>
                    <% } %>
            </div>


        </div>

        <div class="clearfix"></div>

    </section>


